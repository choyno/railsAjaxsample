<h1>Posts#index</h1>
<%= link_to "+ add", new_post_path, :remote => true  %>
<div id="show"></div>
<div id="list">
  <table border="1">
    <thead>
      <tr>
        <td>ID</td>
        <td>TITLE</td>
        <td>BODY</td>
        <td>ACTION</td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr id="<%= p[:id]  %>">
          <td id="<%= p[:id] %>td1"><%= p[:id]  %></td>
          <td id="<%= p[:id] %>td2"><%= p[:title]  %></td>
          <td id="<%= p[:id] %>td3"><%= p[:body]  %></td>
          <td>
            <%= link_to "edit", edit_post_path(p), :remote => true  %>
            |
            <%= link_to "delete", post_path(p), :method => :delete, :remote => true  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div id="form"></div>
